                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I geek out on" />

                <TextView
                    style="@style/discover_elements_title_textview_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Sweets."
