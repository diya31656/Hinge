                    android:text="Home town" />

                <TextView
                    style="@style/list_userDetail2"
                    android:text="some place" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    style="@style/list_userDetail"
                    android:text="Politics" />

                <TextView
                    style="@style/list_userDetail2"
                    android:text="Prefer Not to Say" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    android:id="@+id/vitals"
                    style="@style/list_titles"
                    android:text="@string/my_virtues"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card3" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    android:id="@+id/tvNameTitle"
                    style="@style/list_userDetail"
                    android:text="Name" />

                <TextView
                    android:id="@+id/tvName"
                    style="@style/list_userDetail2"
                    android:text="name" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    android:id="@+id/tvGenderTitle"
                    style="@style/list_userDetail"
                    android:text="Gender" />

                <TextView
                    android:id="@+id/tvGender"
                    style="@style/list_userDetail2"
                    android:text="Man" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    android:id="@+id/tvAgeTitle"
                    style="@style/list_userDetail"
                    android:text="Age" />

                <TextView
                    android:id="@+id/tvAge"
                    style="@style/list_userDetail2"
                    android:text="20" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    android:id="@+id/tvHeightTitle"
                    style="@style/list_userDetail"
                    android:text="Height" />

                <TextView
                    android:id="@+id/tvHeight"
                    style="@style/list_userDetail2"
                    android:text="@string/_5_6" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    android:id="@+id/tvLocationTitle"
                    style="@style/list_userDetail"
                    android:text="Location" />

                <TextView
                    android:id="@+id/tvLocation"
                    style="@style/list_userDetail2"
                    android:text="Bangalore" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    android:id="@+id/tvEthanicityTitle"
                    style="@style/list_userDetail"
                    android:text="Ethnicity" />

                <TextView
                    android:id="@+id/tvEthanicity"
                    style="@style/list_userDetail2"
                    android:text="South Asian" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    android:id="@+id/tvChildernTitle"
                    style="@style/list_userDetail"
                    android:text="Children" />

                <TextView
                    style="@style/list_userDetail2"
                    android:text="Don't have childern" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    style="@style/list_userDetail"
                    android:text="Family Plans" />

                <TextView
                    style="@style/list_userDetail2"
                    android:text="Don't want childern" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    android:id="@+id/myVices"
                    style="@style/list_titles"
                    android:text="My Vices"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card3" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    style="@style/list_userDetail"
                    android:text="Drinking" />

                <TextView
                    style="@style/list_userDetail2"
                    android:text="@string/no" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    style="@style/list_userDetail"
                    android:text="Smoking" />

                <TextView
                    style="@style/list_userDetail2"
                    android:text="@string/no" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    style="@style/list_userDetail"
                    android:text="Marijuana" />

                <TextView
                    style="@style/list_userDetail2"
                    android:text="@string/no" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    style="@style/list_userDetail"
                    android:text="Drugs" />

                <TextView
                    style="@style/list_userDetail2"
                    android:text="@string/no" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    style="@style/list_titles"
                    android:text="My account"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card3" />

                <ImageView style="@style/discover_Horizondal_line" />

                <TextView
                    style="@style/list_userDetail"
                    android:text="Recent Instagram Feed" />

                <ImageView
                    android:layout_marginTop="10dp"
                    style="@style/discover_Horizondal_line"
                    android:layout_marginBottom="30dp" />

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:elevation="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/line_horizonda_purplel"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/cardView6" />

</androidx.constraintlayout.widget.ConstraintLayout>