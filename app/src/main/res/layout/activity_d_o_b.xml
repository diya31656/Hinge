<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DOB">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dot_bg"
        android:layout_marginTop="90dp"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle1_bg"
        android:layout_marginTop="65dp"
        android:layout_marginStart="30dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_birthday_cake"
        android:layout_marginStart="45dp"
        android:layout_marginTop="80dp"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What's your date"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_marginTop="150dp"
        android:layout_marginStart="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="of birth?"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/textView"
        android:layout_marginStart="30dp"/>
    <View
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:background="#000000"
        android:layout_marginTop="350dp"
        android:layout_marginStart="30dp"/>
    <View
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:id="@+id/tvline"
        android:background="#000000"
        android:layout_marginTop="420dp"
        android:layout_marginStart="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Age"
        android:id="@+id/tvage"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@id/tvline"
        android:layout_marginTop="60dp"
        android:textColor="#000000"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This can't be changed later"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@id/tvage"/>
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/tvcircle"
        android:layout_marginTop="670dp"
        android:layout_marginStart="350dp"
        android:background="@drawable/circle"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right_arrow"
        android:layout_marginStart="365dp"
        android:layout_marginTop="685dp"/>






</RelativeLayout>