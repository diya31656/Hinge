<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phone_num">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle1_bg"
        android:layout_marginTop="65dp"
        android:layout_marginStart="20dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_telephone"
        android:layout_marginStart="35dp"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/tvphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="40sp"
        android:text="What's your phone number?"
        android:layout_marginTop="150dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Hinge will send you a text with a verification code. Message and data rates may apply."
        android:textSize="18dp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="30dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_india"
        android:layout_marginTop="300dp"
        android:id="@+id/tvflag"
        android:layout_marginStart="30dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91"
        android:id="@+id/tvcode"
        android:layout_toEndOf="@id/tvflag"
        android:layout_marginTop="300dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="325dp"
        android:layout_toEndOf="@id/tvcode"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_down_arrow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginStart="30dp"
        android:padding="75dp"
        android:id="@+id/tvline"
        android:background="#000000"
        android:layout_marginTop="370dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="200dp"
        android:padding="75dp"
        android:layout_marginEnd="20dp"
        android:background="#000000"
        android:layout_marginTop="370dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="670dp"
        android:layout_marginStart="350dp"
        android:background="@drawable/circle"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right_arrow"
        android:layout_marginStart="365dp"
        android:layout_marginTop="685dp"/>



</RelativeLayout>